<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relatively"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.90"
        android:orientation="vertical"
        android:weightSum="1" >

        <LinearLayout
            android:id="@+id/linearLayout11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.20"
            android:orientation="vertical"
            android:weightSum="1" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >
                <TextView
                    android:id="@+id/txv_puntuacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Score : 0"

                    android:textSize="25.0sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/txv_tiempo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="00:01:00"

                    android:textSize="25.0sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearLayout12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.60"
            android:orientation="vertical"
            android:weightSum="1" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.40" >
                <TextView
                    android:id="@+id/txv_pregunta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:layout_marginBottom="15dp"
                    android:text="Que es Rails"

                    android:textSize="23.0sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.20"
                android:orientation="vertical"
                android:weightSum="1" >
                <RadioGroup android:id="@+id/radioGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="67dp"
                    android:layout_marginTop="60dp"
                    android:layout_gravity="center">

                    <RadioButton android:id="@+id/rbtn_quiz1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:selectAllOnFocus="true"
                        android:text="Un lenguaje de programaciÃ³n"
                        />

                    <RadioButton android:id="@+id/rbtn_quiz2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Un framework"
                        />

                    <RadioButton android:id="@+id/rbtn_quiz3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Un sistema de desarrollo"
                        />
                </RadioGroup>
            </LinearLayout>
            <Button
                android:id="@+id/boton_sigueinte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Siguiente"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>