<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="utng.edu.mx.aprendersoap.TemarioCurso"
    tools:showIn="@layout/app_bar_temario_curso"
    android:orientation="vertical"
    android:background="@drawable/fondo2"

    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Slecciona el Modulo"
        android:textSize="20dp"
        android:gravity="center"
        android:textStyle="bold"
        android:id="@+id/txv_selecciona"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />



    <ImageButton
        android:layout_width="300px"
        android:layout_height="300px"
        android:scaleType="fitXY"
        android:src="@drawable/modulo1"
        android:id="@+id/imv_modulo1"
        android:layout_gravity="center"
        android:background="@drawable/modulo1"
        android:layout_below="@+id/txv_selecciona"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <ImageButton
        android:layout_width="300px"
        android:layout_height="300px"
        android:src="@drawable/modulo2"
        android:layout_gravity="right"
        android:id="@+id/imv_modulo2"
        android:scaleType="fitXY"
        android:background="@drawable/modulo2"
        android:layout_below="@+id/txv_selecciona"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <ImageButton
        android:layout_width="300px"
        android:layout_height="300px"
        android:src="@drawable/modulo3"
        android:id="@+id/imv_modulo3"
        android:scaleType="fitXY"
        android:layout_gravity="center"
        android:background="@drawable/modulo3"
        android:layout_below="@+id/imv_modulo2"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
